<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="?colorControlHighlight">
	<item>
		<selector>
			<item android:state_enabled="true">
				<shape>
					<stroke
						android:width="1dp"
						android:color="#FD3538"/>
					<corners android:radius="3dp"/>
					<padding
						android:bottom="5dp"
						android:left="7dp"
						android:right="7dp"
						android:top="5dp"/>
				</shape>
			</item>
			<item android:state_enabled="false">
				<shape>
					<stroke
						android:width="1dp"
						android:color="#808080"/>
					<corners android:radius="3dp"/>
					<padding
						android:bottom="5dp"
						android:left="7dp"
						android:right="7dp"
						android:top="5dp"/>
				</shape>
			</item>
		</selector>
	</item>
</ripple>