<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  tools:context=".CustomViewPagerActivity"
			  android:orientation="vertical">
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="48dp"
    	android:background="#1e69ae">
	    <LinearLayout
	        android:id="@+id/tabBarView"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="0dp" >
	
	        <TextView
	            android:id="@+id/textView_page1"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:text="page 1"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	
	        <TextView
	            android:id="@+id/textView_page2"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:text="page 2"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	
	        <TextView
	            android:id="@+id/textView_page3"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:text="page 3"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	    </LinearLayout>
	    
	    <ImageView
	        android:id="@+id/iv_tab_indicator"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:src="@drawable/zui_common_tab_indicator_3" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        
        />

</LinearLayout>